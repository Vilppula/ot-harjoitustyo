                              <VBox fx:id="player1NameInfo" alignment="TOP_CENTER" prefHeight="100.0" prefWidth="100.0">
                                 <children>
                                      <Label text="Pelaaja 1:" textAlignment="CENTER" textFill="#b58435" textOverrun="WORD_ELLIPSIS">
                                         <font>
                                            <Font name="Copperplate Gothic Light" size="18.0" />
                                         </font>
                                      </Label>
                                      <Label fx:id="player1Name" alignment="TOP_LEFT" contentDisplay="TOP" text="*get name*" textFill="#f5cece">
                                         <font>
                                            <Font name="Corbel" size="23.0" />
                                         </font>
                                      </Label>
                                 </children>
                              </VBox>
                              <VBox fx:id="player1GameInfo" alignment="CENTER" layoutX="10.0" layoutY="10.0" prefHeight="200.0" prefWidth="100.0">
                                 <children>
                                      <Label alignment="TOP_RIGHT" contentDisplay="CENTER" text="Moves:" textAlignment="RIGHT">
                                         <font>
                                            <Font name="Copperplate Gothic Light" size="25.0" />
                                         </font>
                                      </Label>
                                      <Label fx:id="player1Moves" text="*get moves*">
                                         <font>
                                            <Font name="Corbel" size="22.0" />
                                         </font>
                                      </Label>
                                 </children>
                              </VBox>
                           </children>
                        </VBox>
                        <VBox fx:id="player2Info" alignment="TOP_CENTER" layoutX="10.0" layoutY="10.0" prefHeight="210.0" prefWidth="179.0">
                           <children>
                              <VBox fx:id="player2NameInfo" alignment="TOP_CENTER" prefHeight="100.0" prefWidth="100.0">
                                 <children>
                                    <Label text="Pelaaja 2:" textAlignment="CENTER" textFill="#7aab46" textOverrun="WORD_ELLIPSIS">
                                       <font>
                                          <Font name="Copperplate Gothic Light" size="18.0" />
                                       </font>
                                    </Label>
                                    <Label fx:id="player2Name" alignment="TOP_LEFT" contentDisplay="TOP" text="*get name*" textFill="#f9ffb7">
                                       <font>
                                          <Font name="Corbel" size="23.0" />
                                       </font>
                                    </Label>
                                 </children>
                              </VBox>
                              <VBox fx:id="player2GameInfo" alignment="CENTER" layoutX="10.0" layoutY="10.0" prefHeight="200.0" prefWidth="100.0">
                                 <children>
                                    <Label alignment="TOP_RIGHT" contentDisplay="CENTER" text="Moves:" textAlignment="RIGHT">
                                       <font>
                                          <Font name="Copperplate Gothic Light" size="25.0" />
                                       </font>
                                    </Label>
                                    <Label fx:id="player2Moves" text="*get moves*">
                                       <font>
                                          <Font name="Corbel" size="22.0" />
                                       </font>
                                    </Label>
                                 </children>
                              </VBox>
                           </children>
                        </VBox>
                        <HBox fx:id="playerInfoButtons" alignment="CENTER" prefHeight="40.0" prefWidth="179.0" spacing="7.0">
                           <children>
                              <Button fx:id="closeGame" mnemonicParsing="false" onAction="#closeGame" text="LOPETA">
                                 <font>
                                    <Font size="16.0" />
                                 </font>
                              </Button>
                              <Button fx:id="closeGame1" layoutX="10.0" layoutY="10.0" mnemonicParsing="false" onAction="#restartGame" text="ALUSTA">
                                 <font>
                                    <Font size="16.0" />
                                 </font>
                              </Button>
                           </children>
                        </HBox>
                     </children>
                     <padding>
                        <Insets top="10.0" />
                     </padding>
                     <opaqueInsets>
                        <Insets />
                     </opaqueInsets>
                  </VBox>
               </children>
            </AnchorPane>
          <AnchorPane fx:id="timerPane" minHeight="0.0" minWidth="0.0" prefHeight="100.0" prefWidth="160.0" style="-fx-background-color: #202020;">
               <children>
                    <Label fx:id="timerLabel" alignment="BOTTOM_CENTER" contentDisplay="CENTER" layoutX="43.0" layoutY="38.0" text="00:00" textFill="#b29797">
                       <font>
                          <Font name="Forte" size="38.0" />
                       </font>
                    </Label>
               </children>
            </AnchorPane>
        </items>
      </SplitPane>
     </children>
