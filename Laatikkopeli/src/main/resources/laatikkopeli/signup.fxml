<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<VBox fx:id="signupMain" alignment="TOP_CENTER" prefHeight="600.0" prefWidth="780.0" spacing="15.0" stylesheets="@../css/Info.css" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="laatikkopeli.controllers.SignupController">
    <children>
      <Text strokeType="OUTSIDE" strokeWidth="0.0" styleClass="fancy4" text="Luo uusi pelaaja">
         <font>
            <Font name="Calibri Bold" size="35.0" />
         </font>
         <VBox.margin>
            <Insets bottom="50.0" />
         </VBox.margin>
      </Text>
      <Text layoutX="283.0" layoutY="56.0" strokeType="OUTSIDE" strokeWidth="0.0" styleClass="fancy4" text="Käyttäjätunnus">
         <font>
            <Font name="Calibri Bold" size="25.0" />
         </font>
      </Text>
      <TextField fx:id="username" alignment="TOP_CENTER" maxWidth="300.0" prefHeight="30.0" prefWidth="300.0">
         <font>
            <Font size="18.0" />
         </font></TextField>
      <Text layoutX="321.0" layoutY="149.0" strokeType="OUTSIDE" strokeWidth="0.0" styleClass="fancy4" text="Salasana">
         <font>
            <Font name="Calibri Bold" size="25.0" />
         </font>
      </Text>
      <PasswordField fx:id="password" alignment="TOP_CENTER" maxWidth="300.0" prefHeight="30.0" prefWidth="300.0">
         <font>
            <Font size="18.0" />
         </font>
      </PasswordField>
      <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" spacing="20.0">
         <children>
            <Button fx:id="createNew" mnemonicParsing="false" onAction="#addNewPlayer" text="Luo uusi">
               <font>
                  <Font size="22.0" />
               </font>
            </Button>
              <Button fx:id="returnToFrontpage" onAction="#closeSignupView" prefHeight="40.0" prefWidth="40.0" text="X">
               <font>
                  <Font size="22.0" />
               </font>
            </Button>
         </children>
      </HBox>
      <Text fx:id="infoText" strokeType="OUTSIDE" strokeWidth="0.0" styleClass="fancy3" text="text">
         <font>
            <Font size="25.0" />
         </font>
      </Text>
    </children>
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
</VBox>
