<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox fx:id="main" alignment="TOP_CENTER" prefHeight="600.0" prefWidth="600.0" spacing="20.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="laatikkopeli.SignupController">
    <children>
        <Label text="Luo uusi pelaaja">
         <font>
            <Font name="Calisto MT" size="41.0" />
         </font>
         <VBox.margin>
            <Insets bottom="50.0" />
         </VBox.margin></Label>
      <Label layoutX="166.0" layoutY="30.0" text="Käyttäjätunnus">
         <font>
            <Font name="Calisto MT" size="26.0" />
         </font>
      </Label>
      <TextField fx:id="username" maxWidth="300.0" prefHeight="30.0" prefWidth="300.0" />
      <Label layoutX="225.0" layoutY="99.0" text="Salasana">
         <font>
            <Font name="Calisto MT" size="26.0" />
         </font>
      </Label>
      <TextField fx:id="password" maxWidth="300.0" prefHeight="30.0" prefWidth="300.0" />
      <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" spacing="20.0">
         <children>
            <Button fx:id="createNew" mnemonicParsing="false" onAction="#addNewPlayer" text="Luo uusi">
               <font>
                  <Font size="22.0" />
               </font>
            </Button>
              <Button fx:id="returnToFrontpage" onAction="#closeSignup" prefHeight="40.0" prefWidth="40.0" text="X">
               <font>
                  <Font size="22.0" />
               </font>
            </Button>
         </children>
      </HBox>
    </children>
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
</VBox>
